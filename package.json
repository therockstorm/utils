{
  "name": "@therockstorm/utils",
  "version": "1.0.4",
  "description": "Common utils",
  "homepage": "https://github.com/therockstorm/utils#readme",
  "bugs": {
    "url": "https://github.com/therockstorm/utils/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Rocky Warren",
    "url": "https://www.rockywarren.com"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/therockstorm/utils.git"
  },
  "scripts": {
    "build": "flow-remove-types --pretty --quiet src/ --out-dir lib/",
    "precommit": "lint-staged",
    "flow": "flow",
    "format": "prettier --write '{,!(lib)/**/}*.js'",
    "lint": "standard --fix",
    "prepublish": "npm run build",
    "pretest": "npm run format && npm run lint && npm run flow",
    "test": "mocha -r flow-remove-types/register",
    "watch": "npm test -- --watch"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "eslint-plugin-flowtype": "^2.44.0",
    "flow-bin": "^0.66.0",
    "flow-remove-types": "^1.2.3",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.0",
    "mocha": "^5.0.1",
    "prettier": "^1.7.0",
    "sinon": "^4.3.0",
    "standard": "^11.0.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "standard --fix",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "standard": {
    "globals": [
      "afterEach",
      "beforeEach",
      "describe",
      "it"
    ],
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ]
  }
}
