{
  "name": "@therockstorm/utils",
  "description": "Tiny utility functions",
  "version": "3.0.10",
  "license": "MIT",
  "homepage": "https://github.com/therockstorm/utils#readme",
  "bugs": {
    "url": "https://github.com/therockstorm/utils/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/therockstorm/utils.git"
  },
  "scripts": {
    "build": "pack build",
    "format": "prettier --write '{,!(pkg)/**/}*.+(js|json|md|ts)'",
    "pretest": "npm run format",
    "publish": "pack publish",
    "start": "tsc && node src/index.js",
    "test": "mocha -r ts-node/register test/**/*.ts",
    "watch": "npm test -- --watch"
  },
  "devDependencies": {
    "@pika/pack": "^0.4.0",
    "@pika/plugin-build-node": "^0.4.0",
    "@pika/plugin-build-web": "^0.4.0",
    "@pika/plugin-ts-standard-pkg": "^0.4.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.10",
    "husky": "^3.0.0",
    "lint-staged": "^9.0.0",
    "mocha": "^6.1.4",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
