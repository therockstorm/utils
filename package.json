{
  "name": "@therockstorm/utils",
  "version": "2.1.0",
  "description": "Common utility functions",
  "homepage": "https://github.com/therockstorm/utils#readme",
  "bugs": {
    "url": "https://github.com/therockstorm/utils/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Rocky Warren",
    "url": "https://www.rockywarren.com"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/therockstorm/utils.git"
  },
  "scripts": {
    "build": "rm -rf lib && tsc --outDir lib && cp src/index.d.ts lib",
    "format": "prettier --write '{,!(lib)/**/}*.+(js|json|md|ts)'",
    "prepare": "npm run build",
    "pretest": "npm run format",
    "test": "mocha -r ts-node/register test/**/*.ts",
    "watch": "npm test -- --watch"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.0",
    "husky": "^1.1.2",
    "lint-staged": "^8.0.0",
    "mocha": "^5.2.0",
    "prettier": "^1.14.3",
    "sinon": "^7.0.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
