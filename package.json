{
  "name": "@therockstorm/utils",
  "description": "Tiny utility functions",
  "version": "3.0.16",
  "license": "MIT",
  "homepage": "https://github.com/therockstorm/utils#readme",
  "bugs": {
    "url": "https://github.com/therockstorm/utils/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/therockstorm/utils.git"
  },
  "scripts": {
    "build": "pika build",
    "format": "prettier --write '{,!(pkg)/**/}*.+(js|json|md|ts)'",
    "pretest": "npm run format",
    "pub": "pika publish",
    "start": "tsc && node src/index.js",
    "test": "mocha -r ts-node/register test/**/*.ts",
    "version": "npm run build",
    "watch": "npm test -- --watch"
  },
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@types/mocha": "^7.0.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "mocha": "^7.1.0",
    "prettier": "^1.19.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md,ts}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
