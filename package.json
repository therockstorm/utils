{
  "name": "@therockstorm/utils",
  "version": "2.0.9",
  "description": "Common utility functions",
  "homepage": "https://github.com/therockstorm/utils#readme",
  "bugs": {
    "url": "https://github.com/therockstorm/utils/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Rocky Warren",
    "url": "https://www.rockywarren.com"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/therockstorm/utils.git"
  },
  "scripts": {
    "build": "flow-remove-types --pretty --quiet src --out-dir lib && flow gen-flow-files src --out-dir lib",
    "precommit": "lint-staged",
    "flow": "flow",
    "format": "prettier --write '{,!(lib)/**/}*.js'",
    "lint": "standard --fix",
    "prepare": "npm run build",
    "pretest": "npm run format && npm run lint && npm run flow",
    "test": "mocha -r flow-remove-types/register",
    "watch": "npm test -- --watch"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "cz-conventional-changelog": "^2.1.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "flow-bin": "^0.77.0",
    "flow-remove-types": "^1.2.3",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "mocha": "^5.2.0",
    "prettier": "^1.13.7",
    "sinon": "^6.1.4",
    "standard": "^11.0.1"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "standard --fix",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "standard": {
    "globals": [
      "afterEach",
      "beforeEach",
      "describe",
      "it"
    ],
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
